<!-- app/views/chats/new.html.erb -->
<h1>New Chat</h1>

<%= form_with model: @chat, url: chats_path, method: :post do |form| %>
  <%= form.label :room %>
  <%= form.text_field :room %>
  <%= form.label :users %>
  <%= form.collection_select :user_ids, User.all, :id, :first_name, {}, { multiple: true } %>
  <%= form.submit %>
<% end %>
